<table align="center" width="100%">
  <tr>
    <td valign="top" align="center">
<%= form_for(@broken_item) do |f| %>
  <% if @broken_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@broken_item.errors.count, "error") %> prohibited this broken_item from being saved:</h2>

      <ul>
      <% @broken_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <table>
   <tr>
     <td>
        <div class="field left">
          <%= f.label :name %><br />
          <%= f.text_field :name, :class => "keyboardable", :value => params[:name] %>
        </div>
     </td>
     <td>
       <div class="field left">
        <%= f.label :sku %><br />
        <%= f.text_field :sku, :class => "keyboardable", :value => params[:sku] %>
      </div>
     </td>
   </tr>
   <tr>
     <td>
        <div class="field">
          <%= f.label t("activerecord.attributes.the_shipper") %><br />
          <%= f.select :shipper_id, Shipper.scopied.collect {|t| [t.name,t.id]}.unshift(['NA',0]) %>
        </div>
        <div class="field">
          <%= f.label t("activerecord.attributes.is_shipment_item") %><br />
          <%= f.check_box :is_shipment_item %>
        </div>
     </td>
     <td>
     <div class="field">
        <%= f.label :base_price %><br />
        <%= f.text_field :base_price, :class => "keyboardable-int", :value => params[:base_price] %>
      </div>
       <div class="field">
          <%= f.label :quantity %><br />
          <%= f.text_field :quantity, :class => "keyboardable-int" %>
        </div>
     </td>
   </tr>
 </table>
    <%= f.hidden_field :vendor_id, :value => GlobalData.salor_user.meta.vendor_id %>
    <%= f.hidden_field :owner_id, :value => GlobalData.salor_user.id %>
    <%= f.hidden_field :owner_type, :value => GlobalData.salor_user.class.to_s %>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :class => "keyboardable", :cols => 40, :rows => 5 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  </tr>
</table>

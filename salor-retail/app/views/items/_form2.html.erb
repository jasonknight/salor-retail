});

$(function () {
    $('#item_item_type_id').change(function () {
        if ($(this).val() == 3) {
          $('#coupon').show();
        } else {
          $('#coupon').hide();
        }
        if ($(this).val() == 2) {
          $('#gcardamount').show();
        } else {
          $('#gcardamount').hide();
        }
    });
    if ($('#item_item_type_id').val() == 3) {$('#coupon').show();}
    if ($('#item_item_type_id').val() == 2) {$('#gcardamount').show();}
});
</script>

